{
  "_id": "{{@ system @}}",
  "oauth2": {
    "access_token": "$SECRET(oauth_access_token)",
    "client_id": "$SECRET(oauth_client_id)",
    "client_secret": "$SECRET(oauth_client_secret)",
    "refresh_token": "$SECRET(oauth_refresh_token)",
    "token_url": "{{@ token_url @}}"
  },
  "operations": {
    "deal-delete": {
      "method": "DELETE",
      "url": "Deals/{{ entity['$source']['id'] }}"
    },
    "deal-lookup": {
      "method": "GET",
      "payload_property": "data",
      "url": "Deals/{{ entity['$source']['id'] }}"
    },
    "deal-upsert": {
      "method": "POST",
      "payload_property": "data",
      "url": "Deals/upsert"
    },
    "list-records": {
      "method": "GET",
      "url": "{{ properties.module }}?fields={{ properties.fields }}"
    },
    "upsert": {
      "method": "POST",
      "payload-type": "json",
      "payload_property": "data",
      "url": "{{ properties.module }}/upsert"
    }
  },
  "type": "system:rest",
  "url_pattern": "https://www.zohoapis.eu/crm/v3/%s",
  "verify_ssl": true
}