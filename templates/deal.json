[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "add_namespaces": false,
    "metadata": {},
    "source": {
      "id_expression": "{{ id }}",
      "is_chronological": true,
      "operation": "list-records",
      "payload_property": "data",
      "properties": {
        "fields": "Account_Name,Amount,Campaign_Source,Closing_Date,Contact_Name,Created_By,Created_Time,Deal_Name,Description,Expected_Revenue,Last_Activity_Time,Lead_Conversion_Time,Lead_Source,Modified_By,Modified_Time,Next_Step,Overall_Sales_Duration,Owner,Probability,Sales_Cycle_Duration,Stage,Type",
        "module": "Deals"
      },
      "supports_since": true,
      "system": "{{@ system @}}",
      "trace": {
        "log_request_body_maxsize": 100000,
        "log_response_body_maxsize": 100000
      },
      "type": "rest"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-share",
    "batch_size": 1,
    "namespaced_identifiers": false,
    "sink": {
      "deletion_tracking": false,
      "set_initial_offset": "onload"
    },
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-transform",
      "type": "dataset"
    },
    "transform": [
      {
        "rules": {
          "create-payload": [
            [
              "copy",
              "*",
              [
                "list",
                "_*",
                "$*"
              ]
            ]
          ],
          "default": [
            [
              "copy",
              "*"
            ],
            [
              "add",
              "$payload",
              [
                "dict",
                "data",
                [
                  "list",
                  [
                    "apply",
                    "create-payload",
                    "_S."
                  ]
                ]
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "module": "Deals",
          "operation_delete": "{{@ datatype @}}-delete",
          "operation_insert": "{{@ datatype @}}-upsert",
          "operation_lookup": "{{@ datatype @}}-lookup",
          "operation_update": "{{@ datatype @}}-upsert",
          "primary_key": "id",
          "primary_key_insert": "details.id",
          "rest_system": "{{@ system @}}",
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-share-rest",
        "trace": {
          "log_request_body_maxsize": 100000,
          "log_response_body_maxsize": 100000
        },
        "type": "template"
      }
    ],
    "type": "pipe"
  }
]